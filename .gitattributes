# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text diff=python

# Shell scripts
*.sh text eol=lf

# Windows-specific files
*.bat text eol=crlf
*.cmd text eol=crlf

# Configuration files
*.json text
*.toml text
*.yaml text
*.yml text
*.ini text
*.cfg text

# Documentation
*.md text diff=markdown
*.txt text
*.rst text

# Graphics (binary)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text

# Archives (binary)
*.zip binary
*.tar binary
*.gz binary

# Exclude files from exporting
.gitattributes export-ignore
.gitignore export-ignore
.github export-ignore
